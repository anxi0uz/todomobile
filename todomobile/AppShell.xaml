<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="todomobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:todomobile"
    xmlns:view="clr-namespace:todomobile.View"
    Title="todomobile">

    <ShellContent Route="LoginPage"
                  ContentTemplate="{DataTemplate view:LoginPage}"
                  Shell.NavBarIsVisible="False" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Todos"
        ContentTemplate="{DataTemplate view:TodoPage}"
        Route="TodoPage"/>
    <ShellContent
        Title="EditTodo"
        ContentTemplate="{DataTemplate view:EditTodo}"
        Route="EditTodo"/>
    <ShellContent
        Title="AddTodo"
        ContentTemplate="{DataTemplate view:AddTodo}"
        Route="AddTodo"/>

</Shell>
